\newcommand{\tabtop}[2]{\rule{#1}{#2}}
\newcommand{\tabbot}[3]{\rule[-#1]{#2}{#3}}

\newcommand{\consttabtop}{\tabtop{0pt}{2.6ex}}
\newcommand{\consttabbot}{\tabbot{1.2ex}{0pt}{0pt}}

\newcommand{\firstltblrow}{\consttabtop \consttabbot}

\newcommand{\myhnoline}{\consttabbot\\
  \consttabtop}

\newcommand{\myhline}{\consttabbot\\
  \hline\consttabtop}
\newcommand{\myfhline}{\hline\consttabtop}
\newcommand{\mylhline}{\consttabbot\\
  \hline}

\newcommand{\mydblhline}{\consttabbot\\
  \hline\hline\consttabtop}
\newcommand{\myfdblhline}{\hline\hline\consttabtop}
\newcommand{\myldblhline}{\consttabbot\\
  \hline\hline}

\newcommand{\mycline}[1]{\consttabbot\\
  \cline{#1}\consttabtop}
\newcommand{\myfcline}[1]{\cline{#1}\consttabtop}
\newcommand{\mylcline}[1]{\consttabbot\\
  \cline{#1}}

\newcommand{\tablefont}{\sf \small}
\newcommand{\opentableheader}{\hline \rowcolor[gray]{.9} \consttabtop}
\newcommand{\closetableheader}{\hline \consttabtop}

\newenvironment{MyTable}[2]{%
  \setlength\arrayrulewidth{#1}\arrayrulecolor{#2}%
  \begin{table}[htbp]%
  \tablefont%
}{%
  \normalsize%
  \rm%
  \end{table}%
  \setlength\arrayrulewidth{1pt}\arrayrulecolor{black}%
}

\newenvironment{MyLongTable}[2]{%
  \setlength\arrayrulewidth{#1}\arrayrulecolor{#2}%
  \tablefont%
}{%
  \normalsize%
  \rm%
  \setlength\arrayrulewidth{1pt}\arrayrulecolor{black}%
}

\newcommand{\myparbox}[2]{\parbox{#1}{\consttabtop{}#2\consttabbot}}
